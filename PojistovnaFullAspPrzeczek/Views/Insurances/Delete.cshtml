@using Microsoft.AspNetCore.Mvc.Localization
@model PojistovnaFullAspPrzeczek.DTOs.Insurances.InsuranceDto

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Html.Raw(Localizer["InsuranceDelete_ViewTitle"].Value);
}

<h1>
    @Html.Raw(Localizer["InsuranceDelete_Title"].Value)
</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdInsurance" />
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i>
            @Html.Raw(Localizer["InsuranceDelete_Back"].Value)
        </a>
        <input 
               type="submit" 
               value=@Html.Raw(Localizer["InsuranceDelete_Title"].Value) 
               class="btn btn-danger" 
        />
    </form>
</div>
