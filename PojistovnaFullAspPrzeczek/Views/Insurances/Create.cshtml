@using Microsoft.AspNetCore.Mvc.Localization
@model PojistovnaFullAspPrzeczek.DTOs.Insurances.InsuranceDto

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Html.Raw(Localizer["InsuranceCreate_ViewTitle"].Value);
}

<h1>
    @Html.Raw(Localizer["InsuranceCreate_Create"].Value)
</h1>

<h4>
    @Html.Raw(Localizer["InsuranceCreate_Insurance"].Value)
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    @Html.Raw(Localizer["InsuranceCreate_Back"].Value)
                </a>
                <input 
                       type="submit" 
                       value=@Html.Raw(Localizer["InsuranceCreate_Save"].Value)
                       class="btn btn-primary" 
                 />
            </div>
        </form>
    </div>
</div>

