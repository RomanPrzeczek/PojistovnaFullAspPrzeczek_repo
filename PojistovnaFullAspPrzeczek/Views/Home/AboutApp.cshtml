@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "O aplikaci";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-5" style="max-width: 700px; width: 100%;">
        <div class="card-body text-center">
            <h1 class="mb-4">
                <i class="bi bi-info-circle-fill me-2"></i> @Html.Raw(Localizer["AboutApp_Title"].Value)
            </h1>


            <p class="lead mb-4">
                @Html.Raw(Localizer["AboutApp_Welcome"].Value)
            </p>

            <ul class="list-group list-group-flush text-start mb-4">
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i>@Html.Raw(Localizer["AboutApp_Register"].Value)</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i>@Html.Raw(Localizer["AboutApp_Overview"].Value)</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i>@Html.Raw(Localizer["AboutApp_AddUpdate"].Value)</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i>@Html.Raw(Localizer["AboutApp_MobileFirst"].Value)</li>
            </ul>

            <p class="text-muted">
                @Html.Raw(Localizer["AboutApp_Author"].Value)
            </p>
        </div>
    </div>
</div>
