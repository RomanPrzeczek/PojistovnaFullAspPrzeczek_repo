@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "O aplikaci";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-5" style="max-width: 700px; width: 100%;">
        <div class="card-body text-center">
            <h1 class="mb-4">
                <i class="bi bi-info-circle-fill me-2"></i> @Html.Raw(Localizer["AboutApp_Title"].Value)
            </h1>


            <p class="lead mb-4">
                @Html.Raw(Localizer["AboutApp_Welcome"].Value)
            </p>

            <ul class="list-group list-group-flush text-start mb-4">
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i>@Html.Raw(Localizer["AboutApp_Register"].Value)</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i>@Html.Raw(Localizer["AboutApp_Overview"].Value)</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i>@Html.Raw(Localizer["AboutApp_AddUpdate"].Value)</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i>@Html.Raw(Localizer["AboutApp_MobileFirst"].Value)</li>
            </ul>

            <p class="text-muted">
                @Html.Raw(Localizer["AboutApp_Author"].Value)
            </p>

            <hr class="my-4" />

            <h4 class="mb-3"><i class="bi bi-link-45deg me-2"></i>@Localizer["AboutApp_LinksTitle"]</h4>

            <ul class="list-group text-start mb-4">
                <li class="list-group-item">
                    <a href="https://github.com/RomanPrzeczek/PojistovnaFullAspPrzeczek_repo/tree/master/PojistovnaFullAspPrzeczek" target="_blank">
                        <i class="bi bi-github me-2"></i>@Localizer["AboutApp_GitHub"]
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="https://github.com/RomanPrzeczek/PojistovnaFullAspPrzeczek_repo/blob/master/readme_pojistovna.md" target="_blank">
                        <i class="bi bi-file-earmark-text me-2"></i>@Localizer["AboutApp_Readme"]
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="https://github.com/RomanPrzeczek/PojistovnaFullAspPrzeczek_repo/blob/master/tests_pojistovna.md" target="_blank">
                        <i class="bi bi-file-earmark-code me-2"></i>@Localizer["AboutApp_TestReadme"]
                    </a>
                </li>
            </ul>

            <h5 class="mb-2"><i class="bi bi-diagram-3-fill me-2"></i>@Localizer["AboutApp_Diagrams"]</h5>
            <ul class="list-group text-start">
                <li class="list-group-item">
                    <a href="https://github.com/RomanPrzeczek/PojistovnaFullAspPrzeczek_repo/blob/master/AppDocu/UseCase.png" target="_blank">
                        <i class="bi bi-image me-2"></i>@Localizer["AboutApp_DiagramUseCase"]
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="https://github.com/RomanPrzeczek/PojistovnaFullAspPrzeczek_repo/blob/master/AppDocu/ERD_DataDiagram.png" target="_blank">
                        <i class="bi bi-image me-2"></i>@Localizer["AboutApp_DiagramERD"]
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="https://github.com/RomanPrzeczek/PojistovnaFullAspPrzeczek_repo/blob/master/AppDocu/AppStructure.png" target="_blank">
                        <i class="bi bi-image me-2"></i>@Localizer["AboutApp_DiagramAppStructure"]
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
