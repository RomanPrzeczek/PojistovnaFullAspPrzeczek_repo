@model IEnumerable<PojistovnaFullAspPrzeczek.DTOs.PersonInsurances.PersonInsuranceDto>

@{
    ViewData["Title"] = "Přehled pojištění";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-shield-check me-2"></i> Přehled pojištění</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle-fill me-1"></i> Nové pojištění
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().InsurancePrice)</th>
                    <th>@Html.DisplayNameFor(model => model.First().SubjectOfInsurance)</th>
                    <th>Typ pojištění</th>
                    <th class="text-center">Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.InsurancePrice)</td>
                        <td>@Html.DisplayFor(modelItem => item.SubjectOfInsurance)</td>
                        <td>@item.Insurance?.Title</td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.IdPersonInsurance" class="btn btn-outline-primary" title="Upravit">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.IdPersonInsurance" class="btn btn-outline-secondary" title="Detail">
                                    <i class="bi bi-info-circle-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.IdPersonInsurance" class="btn btn-outline-danger" title="Smazat">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

